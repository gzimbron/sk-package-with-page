{
	"name": "@gzim/svelte-datagrid",
	"version": "0.1.0",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "svelte-package -w",
		"build": "svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"package": "svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"default": "./dist/types.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^3.1.0 || ^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.56.0",
		"@mycustom/eslint-config": "workspace:*",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"author": {
		"name": "Gustavo Zimbr√≥n",
		"email": "gustavo@zimbron.dev",
		"url": "https://zimbron.dev"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gzimbron/svelte-datagrid.git"
	},
	"homepage": "https://gzimbron.github.io/svelte-datagrid/",
	"bugs": {
		"url": "https://github.com/gzimbron/svelte-datagrid/issues"
	},
	"keywords": [
		"svelte",
		"grid",
		"data-grid",
		"table",
		"data-table"
	]
}
